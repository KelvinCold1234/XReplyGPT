{
  "manifest_version": 3,
  "version": "2.0",
  "name": "ùïèReplyGPT",
  "description": "Reply to tweets using ChatGPT",
  "icons": {
    "128": "src/images/XReplyGPT.png"
  },
  "background": {
    "service_worker": "src/service-worker.js",
    "type": "module"
  },
  "commands": {
    "generate_reply": {
      "suggested_key": {
        "default": "Ctrl+Shift+Q",
        "mac": "Command+Shift+Q"
      },
      "description": "Generate reply"
    }
  },
  "permissions": [
    "activeTab",
    "storage",
    "scripting"
  ],
  "host_permissions": [
    "https://twitter.com/*"
  ],
  "content_scripts": [
    {
      "matches": [
        "https://twitter.com/*",
        "https://mobile.twitter.com/*",
        "https://x.com/*"
      ],
      "js": [
        "src/content-window-exit.js"
      ]
    }
  ],
  "action": {
    "default_popup": "src/index.html",
    "default_icon": "src/images/XReplyGPTbg.png"
  }
}